{
  "name": "functions",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "build": "npm run lint && tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build:watch & firebase emulators:start --only functions",
    "shell": "npm run build:watch & firebase functions:shell",
    "start": "npm run shell",
    "debug": "npm run build:watch & firebase functions:shell --inspect-functions",
    "deploy": "firebase deploy --only functions",
    "deploy:lineup": "firebase deploy --only functions:lineup",
    "deploy:authBlock": "firebase deploy --only functions:authBlock",
    "deploy:email": "firebase deploy --only functions:email",
    "deploy:tx": "firebase deploy --only functions:transactions",
    "deploy:notblock": "firebase deploy --only functions:lineup,functions:email,functions:transactions",
    "pp": "npm run test:once && npm run build",
    "logs": "firebase functions:log",
    "test": "vitest",
    "test:once": "vitest run",
    "coverage": "vitest --coverage"
  },
  "engines": {
    "node": "20"
  },
  "type": "module",
  "main": "lib/index.js",
  "dependencies": {
    "@sendgrid/mail": "7.7.0",
    "axios": "1.5.1",
    "axios-retry": "3.8.0",
    "dotenv": "16.3.1",
    "fast-xml-parser": "4.3.1",
    "firebase-admin": "11.11.0",
    "firebase-functions": "4.4.1",
    "js2xmlparser": "5.0.0",
    "spacetime": "7.4.7"
  },
  "devDependencies": {
    "@types/nodemailer": "6.4.11",
    "@typescript-eslint/eslint-plugin": "6.7.3",
    "@typescript-eslint/parser": "6.7.3",
    "@vitest/coverage-v8": "0.34.5",
    "eslint": "8.50.0",
    "eslint-config-google": "0.14.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-import": "2.28.1",
    "firebase-functions-test": "3.1.0",
    "typescript": "5.2.2",
    "vitest": "0.34.5"
  },
  "private": true
}
